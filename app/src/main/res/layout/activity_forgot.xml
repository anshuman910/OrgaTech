<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guestwall"
    android:orientation="vertical"
    tools:context=".forgot">

    <TextView
        android:id="@+id/addashheader"
        android:layout_width="253dp"
        android:layout_height="46dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corner_white"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Reset your password"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/loginforgot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f1logo" />

    <EditText
        android:id="@+id/loginid"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corner_white"
        android:ems="10"
        android:hint="Your answer"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/f1next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp1" />

    <Spinner
        android:id="@+id/sp1"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corner_white"
        app:layout_constraintBottom_toTopOf="@+id/loginid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginforgot" />

    <TextView
        android:id="@+id/loginforgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corner_white"
        android:text="Please select a security question to continue: "
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/sp1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addashheader" />

    <Button
        android:id="@+id/f1next"
        android:layout_width="269dp"
        android:layout_height="74dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_button_3"
        android:gravity="center"
        android:text="NEXT"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/f1pog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginid" />

    <ImageView
        android:id="@+id/f1logo"
        android:layout_width="237dp"
        android:layout_height="145dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/addashheader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_final" />

    <ProgressBar
        android:id="@+id/f1pog"
        style="@android:style/Widget.Material.Light.ProgressBar"
        android:layout_width="352dp"
        android:layout_height="110dp"
        android:layout_marginBottom="20dp"
        android:foregroundGravity="center"
        android:progressTint="#047B8B"
        android:indeterminateTint="#009bb5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f1next" />

</androidx.constraintlayout.widget.ConstraintLayout>